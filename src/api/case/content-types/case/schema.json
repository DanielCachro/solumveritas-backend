{
  "kind": "collectionType",
  "collectionName": "cases",
  "info": {
    "singularName": "case",
    "pluralName": "cases",
    "displayName": "Case",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "readTimeInMinutes": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 0
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "blocks": {
      "type": "dynamiczone",
      "components": [
        "blog-component.text-block",
        "blog-component.image"
      ]
    }
  }
}
